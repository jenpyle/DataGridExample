            <Button
                Width="50"
                Height="50"
                Click="Button_Click_2"
                Content="Clear" />
            <Button
                Width="100"
                Height="100"
                Background="PapayaWhip"
                Click="Button_Click_4"
                Content="Refill" />
            <Button
                Width="100"
                Height="100"
                Background="PapayaWhip"
                Click="Button_Click_5"
                Content="Refill replace" />
        </StackPanel>
    </StackPanel>
</Page>
